// Place your key bindings in this file to overwrite the defaults
[
    // Fix capslock escape
    {
        "key": "capslock",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },

    // Split navigation
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },

    // Fix forward/backward using vim C-o, C-i
    // Can't seem to add these two to the vim keybindings successfully, so
    // leaving them here since they work
    { "key": "ctrl+o",  "command": "workbench.action.navigateBack" },
    { "key": "ctrl+i", "command": "workbench.action.navigateForward" },

    // UI
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.toggleSidebarVisibility"
    },

    // Editor actions
    {
        "key": "ctrl+shift+g",
        "command": "workbench.files.action.showActiveFileInExplorer",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+b",
        "command": "editor.action.revealDefinition"
    },
    {
        "key": "ctrl+shift+b",
        "command": "references-view.find"
    },
]

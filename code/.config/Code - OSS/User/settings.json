{
    "editor.fontFamily": "'Source Code Pro Medium', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 11,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestions": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 90, 120],
    "editor.suggestOnTriggerCharacters": false,

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/node_modules": true,
        "**/venv": true,
        "**/.mypy_cache": true,
    },
    "files.watcherExclude": {
        "**/venv/**": true,
        "**/.mypy_cache/**": true,
    },
    "search.exclude": {
        "**/venv": true,
        "**/.mypy_cache": true,
    },

    "git.autofetch": true,
    "gitlens.defaultDateStyle": "absolute",

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "'Source Code Pro Semibold', 'Droid Sans Mono'",
    "terminal.integrated.fontSize": 11,

    "update.channel": "none",
    "update.enableWindowsBackgroundUpdates": false,

    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "breadcrumbs.enabled": false,
    "window.zoomLevel": 0,

    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        // "statusBar.background": "#1A1A1A",
        // "statusBar.debuggingBackground": "#263238",
        // "statusBar.noFolderBackground": "#212121",
        // "activityBar.background": "#1A1A1A",
        // "sideBar.background": "#1A1A1A"
    },
    "workbench.colorTheme": "Light Delight",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    // To allow movement using jk in sidebar
    "workbench.list.keyboardNavigation": "simple",
    "workbench.activityBar.visible": false,
    "workbench.tree.indent": 24,

    // Lang
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },

    // PLUGINS /////////////////////////////////////////////////////////////////

    // Vim extension
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.foldfix": true,
    "vim.history": 100,
    "vim.enableNeovim": false,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.normalModeKeyBindings": [{
        "before": ["H"],
        "after": ["g", "T"]
    }, {
        "before": ["L"],
        "after": ["g", "t"]
    }, {
        // Unofficial fix for vim not resettings dirty flag on undo
        "before" : ["u"],
        "commands" : [
            "undo"
        ]
    }, {
        "before" : ["<C-r>"],
        "commands" : [
            "redo"
        ]
    }],

    // Gitlens
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
}

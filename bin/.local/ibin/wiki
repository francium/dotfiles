#!/bin/bash

# Set terminal title
PROMPT_COMMAND=
echo -en "\033]0;Wiki\a"

FILE=index.md
if [ ! -z "$1" ]; then
    FILE="$1"
fi

pushd . > /dev/null

cd ~/wiki
nvim $FILE
git add .
git commit --allow-empty-message -m ""
if [ $? == 0 ]; then
    git pull origin master
    git push origin master
fi

popd > /dev/null
